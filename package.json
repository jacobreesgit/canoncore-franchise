{
  "name": "canoncore",
  "version": "8.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "clear-data": "node scripts/clear-firestore.js",
    "scan-data": "node scripts/scan-data.js",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "deploy": "vercel --prod",
    "deploy:preview": "vercel",
    "deploy:dev": "vercel --target development",
    "vercel:build": "npm run type-check && npm run build",
    "analyze": "ANALYZE=true npm run build",
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html",
    "emulator:start": "firebase emulators:start --only auth,firestore",
    "emulator:dev": "firebase emulators:start --only auth,firestore --import=./emulator-data --export-on-exit=./emulator-data",
    "dev:emulator": "NEXT_PUBLIC_USE_EMULATOR=true npm run dev",
    "version:patch": "npm version patch && git push && git push --tags",
    "version:minor": "npm version minor && git push && git push --tags",
    "version:major": "npm version major && git push && git push --tags",
    "version:check": "echo \"Current version: $(npm pkg get version | tr -d '\\\"')\"",
    "release": "npm run build && npm run version:minor"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
