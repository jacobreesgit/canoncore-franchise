    "fuse.js": "^7.1.0",
    "next": "^15.4.6",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "styled-jsx": "^5.1.7"
  },
  "devDependencies": {
